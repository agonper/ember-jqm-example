<!-- Home page -->
{{#jqm-page}}
  {{#jqm-header position="fixed"}}
      <h1>App home</h1>
  {{/jqm-header}}
  {{#jqm-content}}
      <div align="center">
          <p>This is the home content</p>
        {{jqm-button action=btnAction text=btnText}}
        {{jqm-button action="openPopup" text="Show sample popup"}}
      </div>
      {{#jqm-popup id=popupId title="Sample popup" theme="a" closeButton=true dismissible="false"}}
          <p>Sample content. Click on X button to dismiss</p>
      {{/jqm-popup}}
  {{/jqm-content}}
  {{outlet}}
{{/jqm-page}}
